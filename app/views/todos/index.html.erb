<h1>Listing todos</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Due at</th>
      <th>Private</th>
      <th>Trashed</th>
      <th>Creator</th>
      <th>Assignee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.content %></td>
        <td><%= todo.due_at %></td>
        <td><%= todo.private %></td>
        <td><%= todo.trashed %></td>
        <td><%= todo.creator_id %></td>
        <td><%= todo.assignee_id %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
